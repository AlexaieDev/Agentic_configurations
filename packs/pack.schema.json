{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentic-configurations.dev/pack.schema.json",
  "title": "Agent Pack Manifest",
  "description": "Schema for defining agent pack manifests",
  "type": "object",
  "required": ["name", "version", "description", "global_policy"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Human-readable name of the pack"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Semantic version of the pack"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the pack's purpose"
    },
    "release_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}$",
      "description": "Release date in YYYY-MM format"
    },
    "global_policy": {
      "type": "string",
      "description": "Path to global policy agent file"
    },
    "router_agent": {
      "type": "string",
      "description": "Path to agent selector/router file"
    },
    "categories": {
      "type": "object",
      "description": "Agent groupings by category",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "agents": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["agents"]
      }
    },
    "use_case_routing": {
      "type": "object",
      "description": "Recommended agent workflows by use case",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "workflow": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["workflow"]
      }
    },
    "recommended_kits": {
      "type": "object",
      "description": "Pre-configured agent sets by team size",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "agents": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
